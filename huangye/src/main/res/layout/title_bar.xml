<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tittleBar_width"
    android:background="@color/grey">

    <ImageView
        android:layout_marginLeft="@dimen/all_padding"
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/back"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tittle_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:text="@string/two"
        android:textColor="@color/little_dark"
        android:textSize="@dimen/tittleSize" />

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:layout_centerVertical="true"
         android:background="@drawable/tittle_two"/>

    <ImageView
        android:id="@+id/share_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/little_padding"
        android:layout_centerVertical="true"
        android:background="@drawable/more"/>


</RelativeLayout>