<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/all_padding">




        <TextView
            android:id="@+id/version_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vol" />

        <ImageView
            android:id="@+id/stuff_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_big_width"
            android:layout_marginTop="@dimen/all_padding"
            android:background="@drawable/bg" />

        <TextView
            android:id="@+id/image_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_padding"
            android:text="@string/image_info"
            android:textSize="@dimen/text_width" />

        <TextView
            android:layout_marginTop="@dimen/all_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stuff_comment"
            android:textSize="@dimen/content_size"
            android:text="@string/stuff_comment"/>





    </LinearLayout>
</ScrollView>