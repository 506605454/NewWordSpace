<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/all_padding"
        android:orientation="vertical">


        <TextView
            android:id="@+id/artical_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"/>

        <TextView
            android:id="@+id/artical_tittle"
            android:layout_marginTop="@dimen/all_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/artical_tittle"
            android:text="@string/artical_tittle"/>

        <TextView
            android:layout_marginTop="@dimen/little_padding"
            android:id="@+id/artical_author"
            android:textSize="@dimen/text_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_name"/>

        <TextView
            android:layout_marginTop="@dimen/big_padding"
            android:id="@+id/artical_content"
            android:textSize="@dimen/content_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_text"/>



        <ImageButton
            android:id="@+id/up_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/little_padding"
            android:background="@drawable/thumb" />

        <TextView
            android:id="@+id/up_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/little_dark"
            android:textSize="@dimen/content_size"
            android:text="@string/up_count"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginBottom="@dimen/all_padding"
            android:layout_marginTop="@dimen/all_padding"
            android:background="@color/little_dark" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/artical_author_buttom"
            android:textSize="@dimen/text_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_name"/>


        <TextView
            android:layout_marginLeft="@dimen/all_padding"
            android:id="@+id/artical_author_weibo"
            android:textSize="@dimen/content_size"
            android:textColor="@color/little_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_name"/>

    </LinearLayout>

        <TextView
            android:id="@+id/artical_author_introduce"
            android:layout_marginTop="@dimen/all_padding"
            android:textSize="@dimen/content_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author_intro"/>
    </LinearLayout>
</ScrollView>
